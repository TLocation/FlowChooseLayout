<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.loction.choose.flowchooselayout.MainActivity">

    <com.loction.choose.flowchooselibrary.weight.FlowChooseLayout
        android:id="@+id/id_attr"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:backgroundColor="@color/colorAccent"
        app:borderColor="@color/colorPrimary"
        app:borderWidth="3dp"
        app:checked_back_border_color="@color/colorAccent"
        app:checked_back_ground="@color/colorPrimary"
        app:checked_text_color="#000000"
        app:flow="true"
        app:radiusBottomLeft="15dp"
        app:radiusBottomRight="20dp"
        app:radiusTopLeft="5dp"
        app:radiusTopRight="10dp"
        app:text_color="#ffffff"
        app:weight="true"
        app:isMultiSelect="true"
        app:weightNum="3">

    </com.loction.choose.flowchooselibrary.weight.FlowChooseLayout>

    <Button
        android:id="@+id/id_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="测试" />
</RelativeLayout>
